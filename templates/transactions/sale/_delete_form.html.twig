<form method="post" action="{{ path('app_sales_delete', {'id': sale.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sale.id) }}">
    <button class="btn {{ app.request.get('_route') == 'app_sales' ? 'btn-sm' }} btn-danger ">Delete</button>
</form>
