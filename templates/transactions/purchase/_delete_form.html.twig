<form method="post" action="{{ path('app_purchases_delete', {'id': purchase.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ purchase.id) }}">
    <button class="btn {{ app.request.get('_route') == 'app_purchases' ? 'btn-sm' }} btn-danger ">Delete</button>
</form>
