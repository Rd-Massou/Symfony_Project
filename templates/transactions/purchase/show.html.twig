{% extends "layouts/base.html.twig" %}

{% block title %}Purchase {{ purchase.id }}{% endblock %}

{% block body %}
<div class="container">
    <div class="card shadow my-4 p-4 mx-5">
    <h1>Purchase NÂ°{{ purchase.id }}</h1>

    <div class="table-responsive p-2 mb-2 rounded" style="border: solid 1px #AAA">
        <table class="table table-sm">
        <tbody>
            <th>Product</th>
                    <td><img class="mb-3" src="{{ asset('uploads/'~purchase.product.image) }}" height="250">
                        <br>
                        {{ purchase.product }}
                    </td>
            <tr>
                <th>Quantity</th>
                <td>{{ purchase.quantity }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ purchase.total }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ purchase.createdAt ? purchase.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    </div>

    <div class="d-flex">
        <a class="btn btn-primary" href="{{ path('app_purchases') }}">Back To List</a>
        {% for role in user.roles %}
        {% if role == "ROLE_ADMIN" %}
        <a class="btn btn-outline-warning mx-1"
            href="{{ path('app_purchases_edit', {'id': purchase.id}) }}">Edit</a>
            {{ include('transactions/purchase/_delete_form.html.twig') }}
        {% endif %}
        {% endfor %}
    </div>
</div>
</div>
{% endblock %}
